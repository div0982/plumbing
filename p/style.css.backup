    .values-grid {
        grid-template-columns: 1fr;
    }

    .gallery-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 640px) {
    .stats-grid-large {
        grid-template-columns: 1fr;
    }

    .cta-buttons {
        flex-direction: column;
        width: 100%;
    }

    .cta-buttons .btn {
        width: 100%;
    }
}

/* Mobile Menu */
.mobile-menu-toggle {
    display: none;
    background: var(--primary-blue);
    color: white;
    border: none;
    padding: 0.8rem 1.2rem;
    border-radius: var(--radius-sm);
    font-size: 1.5rem;
    cursor: pointer;
    transition: all var(--transition-fast);
    z-index: 1001;
}

.mobile-menu-toggle:hover {
    background: var(--primary-blue-dark);
}

.mobile-menu-toggle:active {
    transform: scale(0.95);
}

@media (max-width: 968px) {
    .mobile-menu-toggle {
        display: block;
    }

    .nav-links {
        position: fixed;
        top: 0;
        right: -100%;
        height: 100vh;
        width: 280px;
        background: var(--dark-card);
        flex-direction: column;
        padding: 5rem 2rem 2rem;
        gap: 1rem;
        box-shadow: var(--shadow-xl);
        transition: right 0.3s ease;
        overflow-y: auto;
        z-index: 1000;
    }

    .nav-links.active {
        right: 0;
    }

    .nav-links li {
        width: 100%;
    }

    .nav-links a {
        display: block;
        padding: 1rem;
        border-radius: var(--radius-sm);
        transition: all var(--transition-fast);
    }

    .nav-links a:hover {
        background: var(--dark-bg);
    }

    .btn-accent {
        width: 100%;
        text-align: center;
    }

    /* Mobile menu overlay */
    .mobile-menu-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        z-index: 999;
    }

    .mobile-menu-overlay.active {
        display: block;
    }
}

/* Enhanced Mobile Touch Targets */
@media (max-width: 968px) {
    .btn {
        min-height: 48px;
        padding: 1rem 1.5rem;
    }

    .faq-question {
        min-height: 60px;
        padding: 1.2rem var(--spacing-lg);
    }

    .filter-btn {
        min-height: 44px;
        padding: 0.8rem 1.2rem;
    }

    .contact-method {
        padding: 1.5rem;
    }

    /* Better mobile typography */
    body {
        font-size: 16px;
        /* Prevent mobile zoom */
    }

    input,
    select,
    textarea {
        font-size: 16px;
        /* Prevent mobile zoom on focus */
        min-height: 48px;
    }

    textarea {
        min-height: 120px;
    }

    /* Mobile card spacing */
    .service-card,
    .testimonial-card,
    .value-card {
        padding: 1.5rem;
    }

    /* Mobile hero adjustments */
    .hero-badges {
        gap: 0.8rem;
    }

    .badge {
        padding: 0.8rem 1rem;
        font-size: 0.9rem;
    }

    /* Mobile form improvements */
    .form-group {
        margin-bottom: 1.2rem;
    }

    .form-group label {
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }
}

/* Mobile landscape optimizations */
@media (max-width: 968px) and (orientation: landscape) {
    .hero {
        min-height: auto;
        padding: 8rem 0 4rem;
    }

    .page-hero {
        padding: 6rem 0 3rem;
    }
}

/* Small mobile devices */
@media (max-width: 480px) {
    h1 {
        font-size: 2rem;
    }

    h2 {
        font-size: 1.75rem;
    }

    h3 {
        font-size: 1.35rem;
    }

    .phone-number {
        font-size: 1.75rem;
    }

    .floating-card {
        font-size: 0.85rem;
        padding: 0.75rem;
    }
}