    justify-content: space-between;
    margin-bottom: var(--spacing-sm);
    color: var(--text-light);
    font-weight: 600;
}

.progress-bar {
    height: 12px;
    background: var(--dark-card);
    border-radius: var(--radius-xl);
    overflow: hidden;
}

.progress-fill {
    height: 100%;
